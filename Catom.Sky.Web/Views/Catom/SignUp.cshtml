@{
    ViewBag.Title = "注册";
}

<!DOCTYPE html>
<html class="login-bg">
<head>
    <title>@ViewBag.Title</title>

    @{Html.RenderPartial("Head");}

    <!-- this page specific styles -->
    <link rel="stylesheet" href="/Content/css/compiled/signup.css" type="text/css" media="screen" />
</head>

<body>
    <div class="header">
        <a href="/Catom/Index">
            <img src="/Content/img/logo.png" class="logo" />
        </a>
    </div>
    <div class="row-fluid login-wrapper">
        <div class="box">
            <div class="content-wrap">
                <h6>Sign Up</h6>
                <input class="span12" type="text" placeholder="E-mail address" />
                <input class="span12" type="password" placeholder="Password" />
                <input class="span12" type="password" placeholder="Confirm Password" />
                <div class="action">
                    <a class="btn-glow primary signup" href="/Catom/Index">Sign up</a>
                </div>
            </div>
        </div>

        <div class="span4 already">
            <p>Already have an account?</p>
            <a href="/Catom/SignIn">Sign in</a>
        </div>
    </div>

</body>
</html>